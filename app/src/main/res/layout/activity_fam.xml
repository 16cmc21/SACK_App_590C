<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.colincumming.sacapp.famActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="163dp"
        android:layout_marginStart="163dp"
        android:text="One of your relatives has made you previously uncomfortable by making you participate unwillingly in sexual activities with them. What do you do?"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        design:menu="@menu/nav_menu"
        android:background="@color/navBar"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"/>

    <TextView
        android:id="@+id/textView34"
        android:layout_width="203dp"
        android:layout_height="102dp"
        android:text="You tell a parent or another adult that you trust"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/imageButton4"
        app:layout_constraintRight_toRightOf="@id/imageButton4"
        app:layout_constraintBottom_toTopOf="@id/imageButton4"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="252dp" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="203dp"
        android:layout_height="85dp"
        android:layout_marginBottom="199dp"
        android:backgroundTint="@android:color/transparent"
        android:onClick="startTrust"
        app:layout_constraintBottom_toTopOf="@+id/navigation"
        app:layout_constraintLeft_toLeftOf="parent"
        design:srcCompat="@drawable/buttonsmall" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="203dp"
        android:layout_height="85dp"
        android:layout_marginBottom="199dp"
        android:backgroundTint="@android:color/transparent"
        android:onClick="startAvoid"
        app:layout_constraintBottom_toTopOf="@+id/navigation"
        app:layout_constraintRight_toRightOf="parent"
        design:srcCompat="@drawable/buttonsmall" />

    <TextView
        android:id="@+id/textView35"
        android:layout_width="206dp"
        android:layout_height="101dp"
        android:text="You do nothing and avoid the relative"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/imageButton5"
        app:layout_constraintRight_toRightOf="@id/imageButton5"
        app:layout_constraintBottom_toTopOf="@id/imageButton5"
        tools:layout_editor_absoluteX="209dp"
        tools:layout_editor_absoluteY="253dp" />

    <TextView
        android:id="@+id/textView40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tell an adult"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@id/imageButton4"
        app:layout_constraintRight_toRightOf="@id/imageButton4"
        app:layout_constraintTop_toTopOf="@id/imageButton4"
        app:layout_constraintBottom_toBottomOf="@id/imageButton4"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="374dp" />

    <TextView
        android:id="@+id/textView41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avoid the relative"
        android:textColor="@color/white"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="@id/imageButton5"
        app:layout_constraintLeft_toLeftOf="@id/imageButton5"
        app:layout_constraintRight_toRightOf="@id/imageButton5"
        app:layout_constraintTop_toTopOf="@id/imageButton5" />

</android.support.constraint.ConstraintLayout>
