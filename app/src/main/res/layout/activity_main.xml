<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:visibility="visible"
    tools:context="com.example.colincumming.sacapp.MainActivity">

    <!-- IMAGE FORMATTING -->
    <ImageView
        android:layout_width="224dp"
        android:layout_height="290dp"
        android:layout_marginLeft="150dp"
        android:layout_marginStart="165dp"
        android:layout_marginTop="198dp"
        android:src="@drawable/homepagegirl"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="197dp" />

    <!-- FAMILY BUTTON -->
    <Button
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="250dp"
        android:background="@color/buttonColor"
        android:onClick="startQuiz"
        android:text="@string/quizzesButton"

        android:textColor="@color/textColor" />
    <!-- ABOUT BUTTON -->
    <Button
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="300dp"
        android:background="@color/buttonColor"
        android:onClick="startSAC"
        android:text="@string/aboutButton"
        android:textColor="@color/textColor" />
    <!-- RESOURCES BUTTON -->
    <Button
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="365dp"
        android:background="@color/buttonColor"
        android:onClick="startResources"
        android:text="@string/resourceButton"
        android:textColor="@color/textColor" />


    <!-- TASK BAR FORMATTING -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/Navbot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            design:menu="@menu/nav_menu"
            />

    </FrameLayout>


</android.support.design.widget.CoordinatorLayout>